@import 'nib'

html,body
  padding: 0px
  margin: 0px
  width: 100%
  height: 100%

canvas
  border: 1px solid black
  position: relative
  margin-left: auto
  margin-right: auto
.player
  background-image: url('/img/player2.png')
  background-size: 16px 16px

.zombie
  background-image: url('/img/zombie_gray.png')
  background-size: 16px 16px

.tile:hover .zombie, .tile.selected .zombie
  background-image: url('/img/zombie.png')

.thing
  position: absolute
  width: 16px
  height: 16px
  display: inline-block
  box-sizing: border-box
  z-index: 1
