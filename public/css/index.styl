@import 'nib'

.map
  width: 416px
  line-height: 0
  border: 1px solid black
  user-select: none

.slot
  width: 32px
  height: 32px
  display: inline-block
  box-sizing: border-box
  padding: 0
  margin: 0
  background-color: green
  user-select: none

.slot:hover
  border: 1px solid #aaa

.slot.selected
  border: 1px solid #fff
